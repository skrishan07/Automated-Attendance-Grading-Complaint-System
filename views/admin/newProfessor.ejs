<%- include ("../partials/header") %>

    <div class="container text-center formLogin">
        <div class="card">
            <h3 class="mt-5 d-flex pl-5 float-left">ADD NEW PROFESSOR</h3>
            <div class="card-body">
                <form action="/admin/professor/new" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="fullname" placeholder="Full Name">
                    </div>
                    <div class="form-group mt-4">
                        <input class="form-control" type="email" name="email" placeholder="Email" />
                    </div>
                    <div class="form-group mt-4">
                        <input class="form-control" type="password" name="password" placeholder="Password" />
                    </div>
                    <!-- Hidden -->
                    <div class="form-group d-none">
                        <input class="form-control" type="text" name="isrole" value="professor">
                    </div>
                    <!-- Hidden -->
                    <div class="form-group mt-5">
                        <button class="form-control btn btn-outline-primary">Register</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

<%- include ("../partials/footer") %>