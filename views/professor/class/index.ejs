<%- include ("../../partials/header") %>

<div class="container">
    <p class="display-4"> All Classes </p>
    <hr class="my-5" style="border: 1px solid black;" >
    <% var len=0 %>
    <div class="row">
        <% classes.forEach(function(classs){ %>
            <% if( currentuser._id.equals(classs.author.id) ){ %>
                <% len = len + 1; %>
                <div class="col-6 col-lg-3 col-md-4 col-sm-6 mb-3">
                    <div class="card h-100">
                        <div class="card-header bg-dark text-white card-title">
                            <h5 class="text-center mt-2"><%= classs.classcode %></h5>
                            <p class="text-center"><%= classs.name %></p>
                        </div>
                        <div class="card-body">
                            <a class="btn btn-outline-primary mb-1 rounded-pill" href="/professor/class/<%= classs._id %>/student">View Students</a>
                            <a class="btn btn-outline-primary mb-1 rounded-pill" href="/professor/class/<%= classs._id %>/attendance">View Attendance</a>
                            <a class="btn btn-outline-primary mb-1 rounded-pill" href="/professor/class/<%= classs._id %>/grade">View Marks</a>
                            <form action="/professor/class/<%= classs._id %>?_method=DELETE" method="POST">
                                <button class="btn btn-outline-danger rounded-pill">Delete Class</button>
                            </form>
                        </div>
                    </div>                                     
                </div>  
            <% } %>
        <% }); %>    
    </div>
    <% if(len==0){ %>
        <div class="d-flex svgEmpty">
            <img src="/images/empty.svg" alt="logo"/>
        </div>
    <% } %>
</div>

<%- include ("../../partials/footer") %>