<%- include ("../../partials/header") %>

    <div class="container text-center formLogin">
        <div class="card">
            <h3 class="mt-5 d-flex pl-5 float-left">CREATE NEW CLASS</h3>
            <div class="card-body">
                <form action="/professor/class/new"  method="POST">
                    <div class="form-group mt-3">
                        <input class="form-control" type="text" name="classcode" placeholder="Class Code" />
                    </div>
                    <div class="form-group mt-4">
                        <input class="form-control" type="text" name="name" placeholder="Name" />
                    </div>
                    <div class="form-group mt-4">
                        <input class="form-control" type="text" name="batch" placeholder="Batch" />
                    </div>
                    <div class="form-group mt-5">
                        <button class="form-control btn btn-outline-primary">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

